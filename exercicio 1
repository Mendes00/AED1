#include <stdio.h>
#include <stdlib.h>

int main(){
	
	int *a, *b;
	int c = 1, d = 2;
	
	b = &c;
	a = &d;
	
	printf(" %d \n %d\n", *a, *b);
	printf("\n\n%p\n%p\n", a, b);
	
	if(*a > *b){
		printf("\nmaior: %p", a);
	}
	 else
	 printf("\nmaior: %p", b);

	 printf("VAMO GREMIO POHA");
}
